<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dk.sdu.com.democracy.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Title"
                    android:id="@+id/txtTitle"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:id="@+id/spaceSubtitle"
                    android:layout_below="@+id/txtTitle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Subtitle"
                    android:layout_below="@+id/spaceSubtitle"
                    android:id="@+id/txtSubtitle"
                    android:layout_centerHorizontal="true" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/spaceDescription"
                    android:layout_below="@+id/txtSubtitle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Subdescriptiont"
                    android:layout_below="@+id/spaceDescription"
                    android:id="@+id/txtSubdescription" />
            </RelativeLayout>

        </ScrollView>

        <!-- Here goes the Opinion buttons for the current law in view-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Approve Law Button -->
            <Button
                style="@style/even_fit"
                android:text="Approve"
                android:id="@+id/btnApprove" />
            <!-- Reject Law Button -->
            <Button
                style="@style/even_fit"
                android:text="Reject"
                android:id="@+id/btnReject" />
        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <!-- Leads to the Statistics page -->
            <Button
                style="@style/even_fit"
                android:text="Statistics"
                android:id="@+id/btnStatistics" />
            <!-- Leads to the similar proposal page -->
            <Button
                style="@style/even_fit"
                android:text="Similar proposals"
                android:id="@+id/btnSimilarProposals" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <!-- Leads to the debate Page -->
            <Button
                style="@style/even_fit"
                android:text="Debate"
                android:id="@+id/btnDebate" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
